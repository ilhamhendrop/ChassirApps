<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cvIconMember"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="6dp"
        app:contentPadding="4dp"
        app:cardBackgroundColor="@color/splashBack"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/codicon_account"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtNameMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_toEndOf="@id/cvIconMember"
        android:layout_alignParentTop="true"
        style="@style/list_member_name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cvIconMember"
        android:layout_below="@id/txtNameMember"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/txtPoinMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/_0"
            style="@style/list_member_poin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/poin"
            android:layout_toEndOf="@id/txtPoinMember"
            style="@style/list_member_poin"
            android:layout_marginStart="4dp"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>


</RelativeLayout>